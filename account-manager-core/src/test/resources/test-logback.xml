<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true">

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<logger name="mz.co.geekframeworks.core" level="DEBUG"/>
		
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>